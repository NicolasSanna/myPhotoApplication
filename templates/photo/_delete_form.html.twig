<form method="post" action="{{ path('app_photo_delete', {'slug': photo.slug}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette photo ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ photo.slug) }}">
    <button class="btn">Supprimer</button>
</form>
